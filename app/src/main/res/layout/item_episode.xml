<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/episodeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/episode_air_date"
        app:layout_constraintEnd_toEndOf="@+id/episode_air_date"
        app:layout_constraintStart_toStartOf="@+id/episode_air_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/episode_air_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        tools:text="Air_Date"
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/episode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/episodeName" />

    <TextView
        android:id="@+id/episode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Episode"
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/episode_air_date"
        app:layout_constraintStart_toStartOf="@+id/episode_air_date"
        app:layout_constraintTop_toBottomOf="@+id/episode_air_date" />
</androidx.constraintlayout.widget.ConstraintLayout>