<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/locationsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/locationType"
        app:layout_constraintEnd_toEndOf="@+id/locationType"
        app:layout_constraintStart_toStartOf="@+id/locationType"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locationType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        tools:text="Type"
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/locationDimension"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationsName" />

    <TextView
        android:id="@+id/locationDimension"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Dimension"
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/locationType"
        app:layout_constraintStart_toStartOf="@+id/locationType"
        app:layout_constraintTop_toBottomOf="@+id/locationType" />
</androidx.constraintlayout.widget.ConstraintLayout>